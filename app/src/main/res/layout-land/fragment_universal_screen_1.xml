<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:baselineAligned="false">

    <ListView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/universal_screen_1_container_listview"
        android:choiceMode="singleChoice"
        android:padding="5dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/universal_screen_1_btn_new_configuration"
            android:src="@drawable/ic_note_add_black_24dp"
            style="?android:buttonBarButtonStyle"
            android:layout_gravity="left"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/universal_screen_1_btn_save_all"
            android:src="@drawable/save_all"
            style="?android:buttonBarButtonStyle"
            android:layout_gravity="right"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/universal_screen_1_btn_play"
            android:src="@drawable/fab_run_stimulator"
            style="?android:buttonBarButtonStyle"
            android:layout_gravity="right"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/universal_screen_1_btn_stop"
            android:src="@drawable/ic_stop_black_24dp"
            style="?android:buttonBarButtonStyle"
            android:layout_gravity="right"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>

